<h1>Fornecedores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CNPJ</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Endereco</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= fornecedor.email %></td>
        <td><%= fornecedor.endereco_id %></td>
        <td><%= link_to 'Exibir', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Apagar', fornecedor, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

