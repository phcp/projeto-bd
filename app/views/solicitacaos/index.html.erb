<h1>Listing solicitacaos</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Data</th>
      <th>Desconto</th>
      <th>Pagamento</th>
      <th>Cliente</th>
      <th>Produto</th>
      <th>Pessoa</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitacaos.each do |solicitacao| %>
      <tr>
        <td><%= solicitacao.status %></td>
        <td><%= solicitacao.data %></td>
        <td><%= solicitacao.desconto %></td>
        <td><%= solicitacao.pagamento %></td>
        <td><%= solicitacao.cliente_id %></td>
        <td><%= solicitacao.produto_id %></td>
        <td><%= solicitacao.pessoa_id %></td>
        <td><%= link_to 'Show', solicitacao %></td>
        <td><%= link_to 'Edit', edit_solicitacao_path(solicitacao) %></td>
        <td><%= link_to 'Destroy', solicitacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

